{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  timezone: 'Asia/Tokyo',
  dependencyDashboard: true,
  dependencyDashboardAutoclose: true,
  labels: [
    'dependencies',
  ],
  baseBranches: [
    'main',
  ],
  branchPrefix: 'renovate/',
  enabledManagers: [
    'dockerfile',
    'gitlabci',
    'gitlabci-include',
    'gradle',
    'gradle-wrapper',
  ],
  separateMajorMinor: true,
  rangeStrategy: 'pin',
  packageRules: [
    {
      matchUpdateTypes: [
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
      automergeType: 'pr',
      platformAutomerge: true,
    },
    {
      groupName: 'Android Gradle Plugin',
      matchDepNames: [
        'com.android.application',
        'com.android.library',
      ],
    },
    {
      groupName: 'Android Jetpack Compose',
      matchPackageNames: [
        '/^androidx.compose/',
      ],
    },
    {
      groupName: 'Android Lifecycle',
      matchPackageNames: [
        '/^androidx.lifecycle/',
      ],
    },
    {
      groupName: 'Kotlin coroutines',
      matchPackageNames: [
        '/^org.jetbrains.kotlinx:kotlinx-coroutines/',
      ],
    },
    {
      groupName: 'Hilt',
      matchPackageNames: [
        '/^com.google.dagger:hilt/',
        '/^androidx.hilt:hilt/',
      ],
    },
    {
      groupName: 'Android Navigation',
      matchPackageNames: [
        '/^androidx.navigation/',
      ],
    },
    {
      groupName: 'Kotest',
      matchPackageNames: [
        '/^io.kotest:kotest/',
      ],
    },
    {
      groupName: 'Dokka',
      matchPackageNames: [
        '/^org.jetbrains.dokka/',
      ],
    },
  ],
}
