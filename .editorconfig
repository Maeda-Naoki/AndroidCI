root = true

# General config
[*]
charset = utf-8
indent_style = tab
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt}]
indent_style = space
indent_size = 4

[*.gradle]
indent_style = space
indent_size = 4

[*.json]
indent_size = 2
indent_style = space

[*.xml]
indent_style = space
indent_size = 4

[*.bat]
end_of_line = crlf

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false
